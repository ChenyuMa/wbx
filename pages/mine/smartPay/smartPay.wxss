/* pages/mine/smartPay/smartPay.wxss */
/*智能支付页面  */
.smartPay-pages{
  width: 100%;
  background: whitesmoke;
}
/*智能支付内容  */
.smart-content{
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
}
.content-title{
  width: 100%;
  height: 20%;
  background: white;  
} 
.content-title text{
  font-size: 30rpx;
  margin-left: 30rpx;
}
/*支付信息  */
.content-info{
  width: 100%;
  height: 60%;
  background: whitesmoke;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.content-info view{
  margin-left: 30rpx;
  font-size: 30rpx;
  color: gray;
}

/*支付价格  */
.content-price{
  width: 100%;
  height: 20%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 30rpx;
}
.content-price text:last-child{
  display: flex;
  margin-right: 30rpx;
  color: #06C1AE;
}