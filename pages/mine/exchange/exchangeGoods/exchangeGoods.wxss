/* pages/mine/exchange/exchangeGoods/exchangeGoods.wxss */
/*积分商品页面  */
.exchangeGoods-pages{
  width: 100%;
  background: whitesmoke;
}
/*积分兑换内容  */
.exchange-show{
  width: 100%;
  height: 90%;
  /* background: wheat; */
}

/*商品图片  */
.exchange-img{
  width: 100%;
  height: 40%;
  /* background: red; */
}
.exchange-img image{
  width: 100%;
  height: 100%;
}
/*商品名称  */
.exchange-name{
  width: 100%;
  height: 10%;
  background: white;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  justify-content: space-around;
}
.exchange-name text{
  margin-left: 30rpx;
}
.exchange-name text:last-child{
  color: #06C1AE;
}
/*兑换数量  */
.exchange-num{
  width: 100%;
  height: 8%;
  margin-top: 10rpx;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}
.exchange-num view:first-child text:first-child{
  margin-left: 30rpx;
}
.exchange-num view:last-child{
  width: 25%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  margin-right: 30rpx;
  align-items: center;
}
.minus{
  border: 1rpx solid gray;
  border-radius: 100%;
  font-size: 35rpx;
  padding:0 5rpx;
  color: gray;
}
.num{
  font-size: 40rpx;
}
.add{
   border: 1rpx solid #06C1AE; 
  border-radius: 100%;
  font-size: 35rpx;
  padding:0 5rpx;
  background: #06C1AE;
  color: white;
}
.introduce{
  width: 100%;
  margin-top: 10rpx;
  height: 50%;
  display: flex;
  flex-direction: column;
  background: white;
  justify-content: center;
  align-items: center;
}
/*商品介绍  */
.introduce-title{
  width: 100%;
  font-size: 30rpx;
  height: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
  /* border-bottom: 1rpx solid gray; */
}
/*商品详情  */
.introduce-details{
  width: 90%;
  height: 100%;
  border: 1rpx solid gray;
  overflow: hidden;
}
/*立即兑换  */
.exchanges-now{
  width: 100%;
  height: 10%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.exchanges-now text:first-child{
  font-size: 40rpx;
  color: #06C1AE;
}
.exchanges-now text:last-child{
  font-size: 40rpx;
  background: #06C1AE;
  color: white;
  height: 100%;
  width: 30%;
  text-align: center;
  line-height: 120rpx;
}
