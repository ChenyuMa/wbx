/* pages/mine/exchange/exchangeNow/exchangeNow.wxss */
/*兑换界面  */
.exchangeNow-pages{
  width: 100%;
  background: whitesmoke;
}
/*地址  */
.address{
  width: 100%;
  height: 10%;
  background: white;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
}
.address-left view{
  margin-left: 30rpx;
}
.address-left{
  width: 90%;
  height: 100%;
  /* background: red; */
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.left-name text:last-child{
  margin-left: 20rpx;
}
.address-right{
  width: 10%;
  height: 100%;
  display: flex;
  align-items: center;
}
.address-right image{
  width: 30rpx;
  height: 40rpx;
}
/****************************兑换商品  */
.goods{
  width: 100%;
  height: 80%;
  background: whitesmoke;
}
.goods-details{
  width: 100%;
  height: 150rpx;
  background: white;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
}
/*商品图片  */
.details-img{
  width: 25%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.details-img image{
  width: 150rpx;
  height: 130rpx;
}
.details-cotent{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  justify-content: space-around;
}
/****************************************  */
.confirm{
  width: 100%;
  height: 10%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 35rpx;
}
.confirm text:first-child{
  color: red;
}
.confirm text:last-child{
  width: 30%;
  height: 100%;
  background: #09C1AE;
  color: white;
  line-height: 110rpx;
  text-align: center;
}