/* pages/mine/shopOrder/shopOrder.wxss */

/* 弹性行 */
.flex-row {
  display: flex;
  flex-direction: row;
}
/* 弹性列 */
.flex-column {
  display: flex;
  flex-direction: column;
}
/*文本超出省略号  */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/*买菜订单  */
.shopOrderStyle {
  width: 100%;
}

.order-select{
  width: 100%;
  height: 7%;
  background: white;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.select{
  width: 40%;
  height: 50%;
  justify-content: space-around;
  border-radius: 20rpx;
  border: 1rpx solid gainsboro;
}
.select view:first-child{
  width: 50%;
  height: 100%;
  text-align: center;
  border-radius: 20rpx;
}
.select view:last-child{
  width: 50%;
  height: 100%;
  text-align: center;
  border-radius: 20rpx;
}
.selected{
  background: #06c1ae;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}
.selecteds{
  display: flex;
  justify-content: center;
  align-items: center;
}

/*头部栏样式  */

.swiper-tab {
  height: 7%;
  display: flex;
  background-color: white;
  flex-direction: row;
  line-height: 150%;
}

.tab-item {
  width: 33.3%;
  text-align: center;
  font-size: 28rpx;
  color: gray;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper {
  height: 93%;
  background: ghostwhite;
}

.on {
  color: #06c1ae;
  border-bottom: 5rpx solid #06c1ae;
}

/*待付款  */

.noOrder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.noOrder image {
  width: 15%;
  height: 12%;
  margin-bottom: 30rpx;
}

.noOrder text {
  font-size: 28rpx;
  color: gray;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/*订单样式  */

.orderStyle {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

/*订单头部  */

.orderHead {
  width: 100%;
  height: 60rpx;
  display: flex;
  background-color: white;
  flex-direction: row;
}

.orderIcon {
  width: 10%;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.orderIcon image {
  width: 40%;
  height: 60%;
}

.orderID {
  width: 90%;
  display: flex;
  font-size: 25rpx;
  align-items: center;
  justify-content: space-between;
}

.orderID text:first-child {
  padding-left: 20rpx;
}

.orderID text:last-child {
  padding-right: 40rpx;
  color: #0ad2be;
}
.orderID image{
  width: 100rpx;
  height: 35rpx;
  margin-left: 250rpx;
}

/*订单内容  */

.orderContent {
  width: 100%;
  background-color: whitesmoke;
  display: flex;
  flex-direction: column;
}

.contentStyle {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
}

.contentIcon {
  width: 30%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.contentIcon image {
  width: 70%;
  height: 70%;
}

.contentDetails {
  width: 70%;
  height: 100%;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}

.setailsStore {
  width: 100%;
  font-size: 30rpx;
}

.setailsPrice {
  font-size: 26rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.setailsPrice text:last-child {
  margin-right: 40rpx;
}

/*订单尾部  */

.orderFoot {
  width: 100%;
  height: 150rpx;
  background-color: white;
}

.needPay {
  width: 100%;
  height: 40%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.needPay text {
  font-size: 28rpx;
}

.needPay text:nth-child(2) {
  font-size: 34rpx;
  color: #0ad2be;
  margin-left: 20rpx;
}

.needPay text:last-child {
  padding-right: 20rpx;
}

.payBtn {
  width: 100%;
  height: 60%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.payBtn button {
  padding: 0;
  font-size: 25rpx;
  height: 60rpx;
  width: 20%;
  margin: 0 20rpx;
  text-align: center;
  line-height: 60rpx;
}

.payBtn button:first-child {
  border: 2rpx solid #0ad2be;
  background-color: white;
  color: #0ad2be;
}

.payBtn button:last-child {
  background-color: #0ad2be;
  color: white;
}

/*已完成按钮  */

.completedBtn {
  width: 100%;
  height: 60%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.completedBtn button {
  padding: 0;
  font-size: 25rpx;
  height: 60rpx;
  width: 18%;
  margin: 0 10rpx;
  text-align: center;
  line-height: 60rpx;
}

.completedBtn button:nth-child(2) {
  border: 2rpx solid #0ad2be;
  background-color: white;
  color: #0ad2be;
}

.completedBtn button:nth-child(4) {
  background-color: #0ad2be;
  color: white;
}

/*是否到底  */

.loading {
  text-align: center;
  color: #06c1ae;
}
/************************************申请售后  */
.afterSale{
  width: 100%;
  height: 100%;
  background:rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
}
/*售后头部  */
.top-afterSale{
  width: 100%;
  height: 60%;
}
/*申请售后内容  */
.afterSale-content{
  width: 100%;
  height: 40%;
  background: whitesmoke;
}
/*申请售后头部  */
.afterSale-content-top{
  width: 100%;
  height: 15%;
  background: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}
.afterSale-content-top text:first-child{
  margin-left: 30rpx;
}
.afterSale-content-top text:last-child{
  margin-right: 30rpx;
  color: #06c1ae;
}
/*选择售后内容  */
.select-afterSale-content{
  width: 100%;
  height: 85%;
  text-align: center;
}
.select-afterSale-content view{
  line-height: 40rpx;
}
