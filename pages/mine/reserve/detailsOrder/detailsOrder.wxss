/* pages/mine/reserve/detailsOrder/detailsOrder.wxss */
/*订单详情页面  */
.detailsOrder-pages{
  width: 100%;
  background: whitesmoke;
}
/*订单头部  */
.details-top{
  width: 100%;
  height: 25%;
  background: #06C1AE;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
/*店铺图标  */
.details-top image{
  width: 200rpx;
  height: 200rpx;
  /* background: red; */
  border-radius: 100%;
}
/*店铺名称  */
.details-top text{
  font-size: 30rpx;
}
/*订单信息  */
.details-content{
  width: 100%;
  height: 75%;
}
/*订单信息  */
.content-info{
  width: 90%;
  margin: 0 auto;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/*用户信息  */
.info-name{
  width: 90%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid whitesmoke;
}
/*订单号  */
.content-num{
  width: 90%;
  background: white;
  margin: 20rpx auto 0;  
  display: flex;
  align-items: center;
  flex-direction: column;
}
/*备注  */
.info-note{
  font-size: 30rpx;
  width: 90%;
  display: flex;
  flex-direction: column;
}
.info-note text:first-child{
  height: 80rpx;
  line-height: 80rpx;
}
/*预定菜品  */
.content-dishes{
  width: 90%;
  background: white;
  margin: 20rpx auto 0;
}
/*菜品  */
.dishes{
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
}
/*菜品图片  */
.dishes image{
  width: 90rpx;
  height: 90rpx;
  background: cadetblue;
  border-radius: 100%;
  margin: 20rpx 20rpx;
}
/*菜品内容  */
.dishes-content{
  width: 77%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 30rpx;
}
/*菜品名称  */
.dishes-name{
  display: flex;
  justify-content: space-between;
}
/*活动  */
.content-activity{
  width: 90%;
  background: white;
  margin: 20rpx auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.info-name{
  width: 90%;
  height: 80rpx;
}
.content-activity view:nth-child(1) text:last-child{
  color: red;
}
.content-activity view:nth-child(2) text:last-child{
  color: red;
}
/*总计  */
.info-total{
  width: 90%;
  height: 110rpx;
  display: flex;
  font-size: 30rpx;
  align-items: center;
  justify-content: space-between;
}
.info-total text:first-child{
  background: orange;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  color: white;
}