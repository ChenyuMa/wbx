  display: flex;
  align-items: center;
  position: relative;
}
.king{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: -14%;
  left: -7%;
}
.user-icon{
  width: 120rpx;
  height:120rpx;
   border-radius: 100%; 
  border: white solid 4rpx;
}
.user-icon image{
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.user-info{
  width: 55%;
  height: 70%;
