/*用户授权信息  */
.isInfo{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 20;
  display: flex;
  justify-content: center;
  align-items: center;
}
.isInfo-toast{
  width: 80%;
  height: 350rpx;
  background: white;
}
.toast-title{
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background: #06C1AE;
  color: white;
}
.isInfo-toast view:nth-child(2){
  width: 100%;
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
}
.isInfo-toast view:nth-child(3){
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
}
.isInfo-toast view:nth-child(3) button{
  width: 40%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
}
.isInfo-toast view:nth-child(3) button:last-child{
  color: #06C1AE;
}
