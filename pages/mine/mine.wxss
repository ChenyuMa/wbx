/* 弹性行 */
.flex-row {
  display: flex;
  flex-direction: row;
}

/* 弹性列 */
.flex-column {
  display: flex;
  flex-direction: column;
}

/*文本超出省略号  */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 我的页面 */
.minePage{
  width: 100%;
  background: whitesmoke;
}
/*头部  */
.mine-top{
  width: 100%;
  height: 25%;
