/* pages/mine/micron/micron.wxss */

/* 弹性行 */
.flex-row {
  display: flex;
  flex-direction: row;
}
/* 弹性列 */
.flex-column {
  display: flex;
  flex-direction: column;
}
/*文本超出省略号  */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/*我的微米  */
.micron-pages{
  width: 100%;
  background: whitesmoke;
}
/*余额  */
.micron{
  width: 100%;
  height: 30%;
  background: #4AC7B5;
  justify-content: center;
  align-items: center;
}
.micron view{
  font-size: 80rpx;
}
.micron view text:first-child{
  color: white;
}
.micron view text:last-child{
  font-size: 30rpx;
  color: white;
  display: flex;
  align-items: flex-end;
  margin-bottom: 20rpx;
}
.micron text:last-child{
  font-size: 25rpx;
  color: white;
}
/**********************************明细  */
.detail{
  width: 100%;
  height: 8%;
  background: white;
  align-items: center;
  justify-content: space-between;
}
.detail view{
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}
.detail view image{
  width: 40rpx;
  height: 40rpx;
}
.detail view text:last-child{
  font-size: 30rpx;
  margin-left: 10rpx;
}

.detail text:last-child{
  margin-right: 20rpx;
  font-size: 40rpx;
}
