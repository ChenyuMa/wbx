/* pages/mine/address/address.wxss */

.mineAddress {
  width: 100%;
}

.address {
  width: 100%;
  background-color: gainsboro;
}

/*添加地址  */

.addressAdd {
  width: 100%;
  height: 8%;
  font-size: 30rpx;
  text-align: center;
  line-height: 60rpx;
  background: #06c1ae;
  color: white;
}

.addressAdd text {
  line-height: 100rpx;
  margin-left: 20rpx;
}

/*地址样式  */

.addressStyle {
  margin-top: 20rpx;
  width: 100%;
  height: 200rpx;
  background: white;
}

/*用户信息  */

.userInfo {
  width: 100%;
  height: 65%;
}

.userName {
  width: 100%;
  height: 80rpx;
  /* display: flex;
  display: -webkit-flex;
  align-items: flex-end; */
  color: #06c1ae;
}

.userName text:first-child {
  margin-left: 50rpx;
   white-space:nowrap; 
  overflow:hidden;
  text-overflow:ellipsis;
  height: 100%;
  float: left;
  display: block;
  line-height: 80rpx;
}

.userName text:last-child {
  margin:0  20rpx 0 40rpx;
  width: 240rpx;
  height: 100%;
  float: left;
  display: block;
  line-height: 80rpx
}

.userAddress {
  width: 100%;
  height: 35rpx;
  font-size: 25rpx;
}
.userAddress .often{
    height: 100%;
    float: left;
    margin-left:40rpx; 
    padding: 0rpx 20rpx;
    background: #06c1ae;
    border-radius: 5rpx;
    color: #fff;
    line-height: 35rpx;
    display: block
}


.adr {
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap; 
  margin: 0 20rpx 0 40rpx;
  height: 100%;
  display: block;
  float: left;
  line-height: 35rpx;
  width: 70%
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/*线  */

.line {
  width: 100%;
  height: 1%;
  background: gainsboro;
}

/*编辑地址  */

.selectAddress {
  width: 100%;
  height: 35%;
  display: flex;
}

.selectAddress view:first-child {
  width: 55%;
  height: 100%;
  display: flex;
  align-items: center;
}

.selectAddress view:first-child radio {
  margin-left: 50rpx;
  font-size: 33rpx;
}

.selectAddress view:last-child {
  width: 45%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.edit {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
}

.edit image {
  width: 40rpx;
  height: 40rpx;
}

.edit text {
  margin-left: 15rpx;
}

.deleting {
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.deleting image {
  width: 40rpx;
  height: 40rpx;
}

.deleting text {
  margin-left: 15rpx;
}

