/* pages/mine/sweepOrder/sweepOrder.wxss */
.sweepPages{
  width: 100%;
  background: whitesmoke;
}

/*订单样式  */
.orderStyle{
  width: 100%;
  height: 470rpx;
  margin-bottom: 10rpx;
}

/*头部  */
.orderTitel{
  width: 100%;
  height: 80rpx;
  background: white;
  line-height: 80rpx;
  font-size: 35rpx;
  margin-bottom: 1rpx;
  display: flex;
  justify-content: space-between;
}
.orderTitel text:nth-child(1){
  margin-left: 5%;
  margin-right: 10rpx;
}
.orderTitel text:nth-child(2){
  margin-right: 5%;
}
