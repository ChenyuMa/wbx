/*内容  */
.orderContent{
  width: 100%;
  height: 389rpx;
  background: white;
  font-size: 30rpx;
}
.seat{
  margin-left: 5%;
  font-size: 40rpx;
}
.seat text:nth-child(2){
  color: #06C1AE;
}
.time{
  margin-left: 5%;
  color: gray;
}
.dinnerTime{
  margin-left: 5%;
}
.dinnerTime text:nth-child(1){
  color: gray;
}
.mealsNum{
  margin-left: 5%;
}
.mealsNum text:nth-child(1){
  color: gray;
}
.goodsDisplay{
  width: 90%;
  height: 160rpx;
  margin: 20rpx 5% 0;
}
.goods{
  width: 140rpx;
  height: 160rpx; 
  text-align: center;
  display: inline-flex;
  flex-direction: column;
  margin-right: 10rpx;
}
.goods image{
  width: 100%;
  height: 120rpx;
}
.goods text{
  width: 100%;
  height: 40rpx;
  font-size: 30rpx;
  color: red;
}
/*加菜支付  */
.addFoodPay{
  margin-left: 5%;
  margin-top: 20rpx;
  display: flex;
  width: 90%;
  justify-content: space-between;
}
.addPay{
  width: 40%;
  display: flex;
  justify-content: space-between;
}
.addPay text:nth-child(1){
  background: #06C1AE;
  color: white;
  padding: 5rpx 30rpx;
  border-radius: 30rpx;
}
.addPay text:nth-child(2){
   background: #06C1AE; 
   color: white; 
   padding: 5rpx 20rpx;
  border-radius: 30rpx; 
}
