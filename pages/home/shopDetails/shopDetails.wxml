<!--pages/home/shopDetails/shopDetails.wxml-->
<view class='shopDetails' style='height:{{windowHeight}}px;'>
  <movable-area style='width:100%;height:100%;'>
    <!--商家信息  -->
    <view class='storeInfo' wx:if='{{!isRightScroll}}' >
      <image src='{{gradeid==15?goodsList.shop_detail.photo:goodsList.detail.photo}}{{"?imageView2/1/w/100/h/100"}}' class='backgroundImg'></image>
      <view class='storeInfo-left'>
        <image src='{{gradeid==15?goodsList.shop_detail.photo:goodsList.detail.photo}}{{"?imageView2/1/w/100/h/100"}}'></image>
      </view>
      <view class='storeInfo-right'>
        <view class='storeInfo-right-content'>
          <text wx:for='{{5}}' wx:key='index' class='fa fa-star' style='color:gold;font-size:30rpx;'></text>
          <text style='font-size:30rpx;margin-left:20rpx;color:white;'>销售：{{gradeid==15?goodsList.shop_detail.sold_num:goodsList.detail.sold_num}}</text>
        </view>
        <view class='storeInfo-right-content' style='overflow: hidden;'>
          <text style='font-size:25rpx;color:white;'>公告：{{gradeid==15?goodsList.shop_detail.notice==''?'店铺暂无公告':goodsList.detail.notice:goodsList.detail.notice==''?'店铺暂无公告':goodsList.detail.notice}}</text>
        </view>
        <view class='storeInfo-right-content' wx:if='{{gradeid==15?goodsList.shop_detail.consumption_money/100.00:goodsList.detail.consumption_money/100.00 !=""}}' style='overflow: hidden;'>
          <view class='vip-rules'>
            <text>会员公告:</text>
            <text>满{{gradeid==15?goodsList.shop_detail.consumption_money/100.00:goodsList.detail.consumption_money/100.00}}元</text>
            <text>立即成为本店VIP</text>
          </view>
        </view>
        <view class='storeInfo-right-content' style='white-space: nowrap;' catchtap='clickCoupon'>
          <scroll-view style='width:80%;' scroll-x='true'>
            <text style='font-size:20rpx;color:white;border:1rpx solid white;padding:3rpx 4rpx;display:inline-block;margin-left:5rpx;' wx:for='{{goodsList.full_money_reduce}}' wx:key='index'>满{{item.full_money/100.00}}减{{item.reduce_money/100.00}}</text>
          </scroll-view>
        </view>
      </view>
    </view>
    <!--优惠券  -->
    <view class='coupons'>
      <view class='messaes' bindtap='clickMessage' wx:if='{{!sweepOrder}}'>
        <image src='http://www.wbx365.com/static/default/wap/image/xiaochengxu/message1@2x.png'></image>
      </view>
      <scroll-view style='width:86%;height:80%;' scroll-x='true'>
        <view wx:for='{{goodsList.coupon.list}}' wx:key='index' bindtap='coupon' class='{{item.is_receive==0?"coupons-content":"coupons-contents"}}'>
          <!-- <text style='font-size:25rpx;color:#FD9F99;'>领取￥{{item.money/100.00}}</text> -->
          领取￥{{item.money/100.00}}
        </view>
      </scroll-view>
    </view>
    <!-- 头部导航 -->
    <view class='shopNav'>
      <view class='shopNav-view' bindtap='clickeShopNav' data-id='0'>
        <view class='shopNav-view-titel'>
          <text>{{gradeid==20?'点餐':'商品'}}</text>
        </view>
        <view class='shopNav-view-bottom' style='{{navSelect==0?"background:#06c1ae;":""}}'></view>
      </view>
      <view class='shopNav-view' bindtap='clickeShopNav' data-id='1'>
        <view class='shopNav-view-titel'>
          <text>评论</text>
        </view>
        <view class='shopNav-view-bottom' style='{{navSelect==1?"background:#06c1ae;":""}}'></view>
      </view>
      <view class='shopNav-view' bindtap='clickeShopNav' data-id='2'>
        <view class='shopNav-view-titel'>
          <text>商家</text>
        </view>
        <view class='shopNav-view-bottom' style='{{navSelect==2?"background:#06c1ae;":""}}'></view>
      </view>
    </view>
    <!--搜索  -->
    <view class='searchView' style='{{!sweepOrder?"":"top:0;"}}' wx:if='{{isOrdering}}'>
      <view class='search'>
        <image src='{{imgUrls+"b_search@2x.png"}}'></image>
        <input placeholder='搜索店内商品' type='text' bindinput='searchInput' value='{{inputTxt}}'></input>
        <image src='{{imgUrls+"ZFPlayer_close.png"}}' style='display:{{isCancel}}' bindtap='cancelTxt'></image>
      </view>
    </view>
    <!--商品展示区  -->
    <view class='displayGoods' style='{{isRightScroll?"height:82%;":""}}' wx:if='{{isOrdering}}'>
      <!--商品显示左边  -->
      <view class='displayGoodsLeft'>
        <scroll-view scroll-y='true' style='height:100%'>
          <view class="{{curIndex === 0 ? 'on' : ''}} text-ellipsis" bindtap='onClick' data-index='{{0}}' id='{{0}}' data-title='商品'>全部商品</view>
          <view class="{{curIndex === 1 ? 'on' : ''}} text-ellipsis promotion" bindtap='onClick' data-index='{{1}}' id='{{1}}' data-title='促销'>
            <image src='{{imgUrls+"hot@2x.png"}}'></image>促销</view>
          <view class="{{curIndex === 2 ? 'on' : ''}} text-ellipsis seckill" bindtap='onClick' data-index='{{2}}' id='{{2}}' data-title='秒杀'>
            <image src='{{imgUrls+"lightning@2x.png"}}'></image>秒杀</view>
          <view class="{{curIndex === index+3 ? 'on' : ''}} text-ellipsis type" wx:for='{{goodsList.cate?goodsList.cate:goodsList.menu}}' wx:key='index' bindtap='onClick' data-index='{{index+3}}' id='{{item.cate_id}}' data-title='{{item.cate_name}}'>
            <text>{{item.cate_name}}</text>
            <text wx:if='{{item.num != 0}}' class='type-num'>{{item.num}}</text>
          </view>
          <view style='width:100%;height:150rpx;'></view>
        </scroll-view>
      </view>
      <!--商品显示右边  -->
      <view class='displayGoodsRight'>
        <scroll-view scroll-y='true' style='height:100%' scroll-into-view="{{toView}}" bindscrolltolower='rightTolower'>
          <!--优惠卷  -->
          <!-- <view class="coupon" wx:if='{{goodsList.coupon.num > 0 && curIndex == 0}}' bindtap='coupon' style='{{!sweepOrder?"height:30%;":"height:20%;"}}'>
            <text class='couponsTitle'>优惠卷</text>
            <image src='{{imgUrls+"shop_coupon@2x.png"}}'></image>
            <view class='couponNum'>
              <text>{{goodsList.coupon.money/100.00}}元</text>
              <text>{{goodsList.coupon.num}}张优惠卷</text>
            </view>
          </view> -->
          <!--商品样式  -->
          <view class='title text-ellipsis'>{{titleName}}</view>
          <block wx:for='{{goodsAllList}}' wx:key='index'>
            <view class='goodsStyle'>
              <view class='leftIcon' bindtap='goodsDetails' id='{{item.goods_id}}' data-item='{{item}}'>
                <image src='{{item.photo}}{{"?imageView2/1/w/100/h/100"}}' class='icon' lazy-load='true'></image>
                <view class='promotionIcon'>
                  <image class='isPromotion' src='{{imgUrls+"store_sale@2x.png"}}' wx:if='{{item.sales_promotion_is == 1}}'></image>
                  <image class='isPromotion' src='{{imgUrls+"store_mark_seckill@2x.png"}}' wx:if='{{item.is_seckill == 1}}'></image>
                  <image class='isPromotion' src='{{imgUrls+"specification@2x.png"}}' wx:if='{{item.is_attr == 1}}'></image>
                </view>
              </view>
              <view class='rightDetails'>
                <view class='goodsName'>{{gradeid==15?item.product_name:item.title}}</view>
                <view class='goodsSell'>销量：{{item.sold_num}}</view>
                <view class='vip' wx:if='{{item.is_shop_member}}'>
                  <text wx:if='{{item.shop_member_price>0}}' wx:if='{{item.is_attr!=1}}'>￥{{item.shop_member_price/100}}</text>
                  <image src='http://www.wbx365.com/static/default/wap/image/xiaochengxu/membe_price@2x1.png'></image>
                </view>
                <view class='goodsNum'>
                  <text style='{{item.is_shop_member?"text-decoration:line-through":""}}'>￥{{item.mall_price?item.mall_price/100.00:item.price/100.00}}</text>
                  <view class='shopNum'>
                    <image src='{{imgUrls+"store_reduce@2x.png"}}' data-id='{{item}}' catchtap='subtractionGoods'></image>
                    <text>{{item.buy_num}}</text>
                    <image src='{{imgUrls+"store_add@2x.png"}}' catchtap='addGoods' data-id='{{item}}'></image>
                  </view>
                </view>
              </view>
            </view>
            <!--扫码点餐  -->
