                <button disabled='{{item.is_receive == 0?false:true}}' bindtap='pickUp' data-id='{{item.coupon_id}}'>领取</button>
              </view>
            </view>

          </scroll-view>
        </view>
      </view>
      <view class='couponShowImg'>
        <image src='{{imgUrls+"updata_close@2x.png"}}' class='closeCoupon' bindtap='closeCoupon'></image>
