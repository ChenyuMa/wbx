          </block>
          <view style='width:100%;height:150rpx;'></view>
        </scroll-view>
      </view>
    </view>
    <!--底部区域  -->
    <view wx:if='{{isOrdering}}'>
      <view class='confirmOrder' wx:if='{{shopCartNum == 0}}'>
        <view class='shoppingDetails'>
          <view class='shopCart'>
            <image src='{{imgUrls+"store_cart_nor@2x1.png"}}' class='shopCartLogo'></image>
          </view>
          <view class='price'>
            <!-- <text>￥0</text>
        <text>({{goodsList.detail.since_money/100.00}}元起送,配送费{{goodsList.detail.logistics/100.00}}元)</text> -->
            <text>购物车是空的（{{gradeid==15?goodsList.shop_detail.since_money/100.00:goodsList.detail.since_money/100.00}}元起送）</text>
          </view>
        </view>
        <view class='noPlaceOrder'>选好了</view>
      </view>
      <view class='confirmOrder' wx:else>
        <view class='shoppingDetails'>
          <view class='shopCart'>
            <image src='{{imgUrls+"store_cart_nor@2x1.png"}}' class='shopCartLogo' bindtap='shopCart'></image>
            <view class='shopCartNum' wx:if='{{shopCartNum}}'>{{shopCartNum}}</view>
          </view>
          <view class='prices'>
            <text>￥{{shopCartPrice/100.00}}</text>
            <text>({{gradeid==15?goodsList.shop_detail.since_money/100.00:goodsList.detail.since_money/100.00}}元起送,配送费{{gradeid==15?goodsList.shop_detail.logistics/100.00:goodsList.detail.logistics/100.00}}元)</text>
          </view>
        </view>
        <view class='placeOrder' bindtap='confirmOrder'>选好了</view>
      </view>
    </view>
    <!-- //优惠卷弹窗 -->
    <view class='couponShow' wx:if='{{isCouponShow}}' bindtap='closeCoupon'>
      <!-- <view class='couponShows'>
        <view class='couponShows-content'>
          <scroll-view scroll-y='true' style='height:100% '>
            <view class='couponStyle' wx:for='{{goodsList.coupon.list}}' wx:key='index'>
              <image src='{{imgUrls+"couponsCellBGM@2x.png"}}' class='couponIcon'></image>
              <view class='couponPrice'>￥{{item.money/100.00}}</view>
              <view class='couponTitle'>
                <text>满{{item.condition_money/100.00}}元可用</text>
