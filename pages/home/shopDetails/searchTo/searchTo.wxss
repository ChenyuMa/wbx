/* pages/home/shopDetails/searchTo/searchTo.wxss */

.searchStyle {
  width: 100%;
  background: gainsboro;
}

.search {
  width: 100%;
  height: 8%;
  background: #10bfaf;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/*搜索栏  */

.searchView {
  width: 80%;
  height: 60%;
  background: white;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
}

/*搜索图片  */

.searchView image:first-child {
  width: 5%;
  height: 50%;
  margin-left: 3%;
  display: block;
}

/*搜索框  */

.inputView {
  margin: 0 2%;
  width: 80%;
  display: flex;
  align-items: center;
}

.inputView input {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
}

.searchView image:last-child {
  width: 5%;
  height: 50%;
  margin-right: 3%;
}

/*取消  */

.cancel {
  font-size: 30rpx;
  margin-left: 10rpx;
  color: white;
}

/*商品搜索列表  */

.goodsList {
  width: 100%;
  height: 92%;
}

/*商品样式  */

.goodsDetails {
  width: 100%;
  height: 15%;
  background: white;
  display: flex;
  align-items: center;
}
.goodsDetails-null{
  text-align: center;
}

/*商品图片  */

.goodsIcon {
  width: 25%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.goodsImg {
  width: 80%;
  height: 80%;
}

/*商品信息  */

.goodsTitle {
  width: 75%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.onSale {
  font-size: 25rpx;
  color: gray;
}

/*商品价格  */

.goodsPrice {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.goodsPrice text {
  font-size: 30rpx;
  color: #10bfaf;
}

/*商品加减  */

.goodsNum {
  width: 35%;
  margin-right: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.goodsSubtraction {
  width: 40rpx;
  height: 40rpx;
}

.goodsNum text {
  color: black;
}

.goodsAdd {
  width: 40rpx;
  height: 40rpx;
}
