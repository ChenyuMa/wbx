  background-image: url('http://www.wbx365.com/static/default/wap/image/xiaochengxu/box@2x.png');
  position: absolute;
  bottom: 50rpx;
  left: 100rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
