.flex {
  display: flex;
  justify-content: space-between;
}

.clearing {
  width: 100%;
  background: whitesmoke;
  position: relative;
}

/*支付信息  */

.clearingInfo {
  width: 100%;
  height: 90%;
}

/*用户地址  */

.userAddress {
  margin-top: 20rpx;
  width: 100%;
  height: 13%;
  background: white;
  display: flex;
  flex-direction: row;
}

/*地址左边  */

.addressLeft {
  width: 90%;
  height: 100%;
}

/*地址上  */

.addressLeft_top {
  width: 100%;
  height: 50%;
  display: flex;
  align-items: center;
}

.addressLeft_top text {
  font-size: 30rpx;
}

/*名字  */

.addressLeft_top text:nth-child(1) {
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap; 
  flex-basis: auto;
  margin-left: 50rpx;
  text-align: center;
  font-weight: bold;
}

/*电话  */

.addressLeft_top text:nth-child(2) {
  margin-left: 30rpx;
  font-weight: bold;
}

/*默认  */

.addressLeft_top text:nth-child(3) {
  color: #09c1ae;
  font-size: 25rpx;
  padding: 0 10rpx;
  background: white;
  border: 1rpx solid #09c1ae;
  border-radius: 5rpx;
  margin-left: 30rpx;
  flex-shrink: 0;
}

/*地址下  */

.addressLeft_bottom {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.addressLeft_bottom image {
  margin-left: 50rpx;
  width: 30rpx;
  height: 35rpx;
}

.addressLeft_bottom text {
  margin-left: 10rpx;
  /* height: 100%; */
  /* line-height: 100rpx;  */
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/*地址右边  */

.addressRigth {
  width: 10%;
