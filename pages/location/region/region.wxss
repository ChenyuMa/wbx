/* pages/home/region/region.wxss */

.region {
  width: 100%;
  background: whitesmoke;
}

/*头部  */

.regionTop {
  width: 100%;
  height: 15%;
  background: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
}

.searchView {
  width: 80%;
  height: 30%;
  background: gainsboro;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
}

.searchImg {
  margin-left: 3%;
  width: 35rpx;
  height: 30rpx;
}

.searchClearImg {
  width: 30rpx;
  height: 30rpx;
  margin-right: 3%;
}

.searchInput {
  font-size: 30rpx;
  margin-left: 10rpx;
  width: 90%;
}

/*当前城市  */

.currentCity {
  width: 100%;
  height: 35%;
  background: whitesmoke;
  display: flex;
  align-items: center;
}

.currentCityInfo {
  font-size: 30rpx;
  margin-left: 25rpx;
}

/*城市选择  */

.citySelect {
  width: 100%;
  height: 85%;
  background: gainsboro;
  display: flex;
  flex-direction: row;
}

/*  */
.scroll-citySelect{
  width: 92%;
  height: 100%;
}
/*  */
.scroll-sctySelect-right{
  width: 8%;
  height: 70%;
  margin-top: 15%;
  display: flex;
  flex-direction: column;
   justify-content: center;
  align-items: center; 
  font-size: 30rpx;
  color: #06C1AE;
  text-align: center;
}

.firstLetter {
  width: 100%;
  background: cadetblue;
  display: flex;
  flex-direction: column;
}

/*字母  */

.letter {
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  background: whitesmoke;
  line-height: 50rpx;
}

.cityNameStyle {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: white;
  /* display: flex; */
  flex-direction: column;
  border-bottom: 1rpx solid gainsboro;
  font-size: 28rpx;
  color: #333;
}

.cityName {
  font-size: 30rpx;
  margin-left: 20rpx;
  width: 100%;
}

/*搜索城市  */

.searchCityName {
  width: 100%;
  background: white;
  border-bottom: 1rpx solid gainsboro;
}
