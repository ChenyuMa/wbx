/* pages/home/location/location.wxss */
/***************************公用样式  */
.flex-column{
  display: flex;
  flex-direction: column;
}
.flex-row{
  display: flex;
  flex-direction: row;
}
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/**************************************页面样式  */
.locationPage{
  width: 100%;
  background: whitesmoke;
  position: relative;
}
/**********************************************头部搜索框  */
.top_search_view{
  width: 100%;
  height: 10%;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top_search{
  width: 80%;
  height: 60rpx;
  background-color: #E7E7E7;
  border-radius: 50rpx;
}
.search_location{
  width: 20%;
  height: 100%;
  margin-left: 3%;
  justify-content: space-around;
}
.search_location text:first-child{
  font-size: 25rpx;
  line-height: 60rpx;
}
.search_location text:last-child{
  font-size: 30rpx;
  line-height: 53rpx;
}
.search{
  width: 65%;
  height: 100%;
  margin-left: 2%;
}
.search input{
  width: 100%;
  height: 100%;
  font-size: 25rpx;
}
.search-clear{
  margin-left: 1%;
  width: 5%;
  height: 100%;
}
.search-clear text{
  font-size: 35rpx;
  color: gray;
  line-height: 60rpx;
}
/***************************定位内容  */
.location-content{
  width: 100%;
  height: 90%;
}
/***********************定位当前地址******************  */
.current-address{
  margin-top: 30rpx;
  width: 100%;
  height: 80rpx;
  background-color: white;
  text-align: center;
}
.current-address text:first-child{
  color: gold;
  line-height: 80rpx;
}
.current-address text:last-child{
  font-size: 30rpx;
  line-height: 80rpx;
  margin-left: 10rpx;
}
/**********************新增地址****************  */
.add-address{
  margin-top: 30rpx;
  width: 100%;
  height: 80rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
}
.add-address text:first-child{
  line-height: 80rpx;
  font-size: 35rpx;
  margin-left: 20rpx;
}
.add-address text:last-child{
  line-height: 80rpx;
  color: gold;
  margin-right: 20rpx;
}
/***************************我的收货地址  */
.my-goods-address{
  width: 100%;
  height: 80rpx;
}
.my-goods-address text:first-child{
  margin-left: 20rpx;
  line-height: 80rpx;
  color: #9D9D9D;
}
.my-goods-address text:last-child{
  font-size: 30rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
  color: #9D9D9D;
}
/**********************************收货地址列表  */
.goods-address-list{
  width: 100%;
}
.goods-address-list view{
  width: 100%;
  height: 80rpx;
  background: white;
  margin-bottom: 2rpx;
}
.my-addres{
  width: 100%;
  font-size: 30rpx;
}
.my-addres text{
  padding-left: 20rpx;
}
.my-addres view:last-child{
  font-size: 20rpx;
  color: gray;
}
/*****************************附近地址  */
.near-address{
  width: 100%;
  height: 80rpx;
}
.near-address text:first-child{
  line-height: 80rpx;
  color: #9D9D9D;
  margin-left: 20rpx;
}
.near-address text:last-child{
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #9D9D9D;
}
/********************************附近地址列表  */
.near-address-list{
  width: 100%;
}
.near-address-list view{
  margin-top: 2rpx;
  width: 100%;
  height: 80rpx;
  background-color: white;
}
.near-address-list view text{
  line-height: 80rpx;
  font-size: 30rpx;
  margin-left: 30rpx;
}
/********************************收搜收货地址  */
.search-address{
  width: 100%;
  height: 90%;
  position: absolute;
  top: 10%;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
}
.search-addr{
  width: 100%;
  height: 90%;
  position: absolute;
  top: 10%;
  background-color: whitesmoke;
}
.margin-top{
  width: 100%;
  height: 30rpx;
  background: whitesmoke;
}
.search-address-content{
  width: 100%;
  height: 80rpx;
  background: white;
  align-items: center;
  margin-bottom: 2rpx;
}
.address-content-top{
  width: 90%;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}
.address-content-bottom{
  width: 90%;
  font-size: 25rpx;
}
