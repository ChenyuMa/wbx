/*附近的市场  */
.cut-off-rule{
  width: 100%;
  height: 90rpx;
  border-bottom: 1rpx solid gainsboro;
  font-size: 30rpx;
  text-align: center;
  line-height: 90rpx;
}
/*选择地区  */
.selectRegion{
  width: 100%;
  height: 100%;
  position: absolute;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
  z-index: 100;
}
.regionContent{
  width: 100%;
  height: 500rpx;
  background: whitesmoke;
}
.content{
  width: 100%;
}
.type{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #e3e3e3;
}
.type image{
  margin: 0 30rpx;
  height: 45rpx;
  width: 45rpx;
}
.type text{
  font-size: 30rpx;
}
/*导航底部空白区域  */
.bottomArea{
  width: 100%;
  height:48.3%;
}
/*区域内容  */
.contentDQ{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}
.contentDQ-LeftShow{
  width: 35%;
}
.contentDQ-Left{
  width: 100%;
}
.dqContent{
  height: 80rpx;
  background: gainsboro;
  border-bottom: 1rpx solid #d1d3d4;
  font-size: 30rpx;
  line-height: 80rpx; 
  display: flex;
  flex-direction: column;
}
.dqContent text{
  margin-left: 20rpx;
}
/*商圈  */
.contentDQ-Right{
  width: 65%;
  position: absolute;
  right: 0;
  top: 0;
}
.sqContent{
  height: 80rpx;
  border-bottom: 1rpx solid #d1d3d4;
  font-size: 30rpx;
  line-height: 80rpx; 
  display: flex;
  flex-direction: column;
}
.sqContent text{
  margin-left: 20rpx;
}
/*排序  */
.pxContent{
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #d1d3d4;
  font-size: 30rpx;
  line-height: 80rpx; 
}
.pxContent text{
  margin-left: 20rpx;
}
.shopType{
  position: absolute;
  top: 0;
  right: 1rpx; 
}
.shopType text{
  border-radius: 5rpx;
  padding: 3rpx 5rpx;
  font-size: 20rpx;
}
.new-shop{
  border: 1rpx solid red;
  color: red;
}
.waiting-shop{
  border: 1rpx solid #F39800;
  color: #F39800;
}
.shop-open{
  border: 1rpx solid #15C5B3;
  color: #15C5B3;
}
.shop-rest{
  border: 1rpx solid gray;
  color: gray;
}
